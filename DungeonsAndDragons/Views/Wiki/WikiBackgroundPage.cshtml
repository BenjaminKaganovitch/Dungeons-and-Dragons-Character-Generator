@using DungeonsAndDragons.Domain
@model Background

<div class="center">
    @*

		public int Id { get; set; }
		public string? CreatorId { get; set; }
		public UserLeadEntity? Creator { get; set; }
		public string Name { get; set; } = null!;
		public string Source { get; set; } = null!;
		public string Description { get; set; } = null!;
        public ICollection<Feature> Features { get; set; } = new List<Feature>();

    *@

	<h2>@Model.Name</h2>
	<p>@Model.Description</p>
    <div>
        @foreach (Feature f in Model.Features)
        {
            <div>
                <h3>@f.Name</h3>
                <p>@f.Description</p>
            </div>
        }
    </div>
    @if (Model.Creator != null)
    {
        <p>Created by: <a asp-action="" asp-route-id="@Model.Creator.Id">@Model.Creator.UserName</a></p>
    }
    <p>Source: @Model.Source</p>
</div>