<h1>Character Creator</h1>

<form method="post" asp-controller="Create" asp-action="Create">
	<div class="form-control">
		<label for="Name">Name</label>
		<input type="text" name="Name" id="Name" placeholder="Character name" />
	</div>

	<div class="form-control">
		<label for="Age">Age</label>
		<input type="text" name="Age" id="Age" placeholder="Character age" />
	</div>

	<div class="form-control">
		<label for="Height">Height</label>
		<input type="text" name="Height" id="Height" placeholder="Character height" />
	</div>

	<div class="form-control">
		<label for="Weight">Weight</label>
		<input type="text" name="Weight" id="Weight" placeholder="Character weight" />
	</div>

	<div class="form-control">
		<label for="EyeColour">EyeColour</label>
		<input type="text" name="EyeColour" id="EyeColour" placeholder="Character eye colour" />
	</div>

	<div class="form-control">
		<label for="SkinColour">SkinColour</label>
		<input type="text" name="SkinColour" id="SkinColour" placeholder="Character skin colour" />
	</div>

	<div class="form-control">
		<label for="HairColour">HairColour</label>
		<input type="text" name="HairColour" id="HairColour" placeholder="Character hair colour" />
	</div>

	<div class="form-control">
		<label for="Backstory">Backstory</label>
		<input type="text" name="Backstory" id="Backstory" placeholder="Character backstory" />
	</div>

	<div class="form-control">
		<label for="Personality">Personality</label>
		<input type="text" name="Personality" id="Personality" placeholder="Character personality" />
	</div>

	<div class="form-control">
		<label for="Ideals">Ideals</label>
		<input type="text" name="Ideals" id="Ideals" placeholder="Character ideals" />
	</div>

	<div class="form-control">
		<label for="Bonds">Bonds</label>
		<input type="text" name="Bonds" id="Bonds" placeholder="Character bonds" />
	</div>

	<div class="form-control">
		<label for="Flaws">Flaws</label>
		<input type="text" name="Flaws" id="Flaws" placeholder="Character flaws" />
	</div>

	<div class="form-control">
		<label for="AppearanceDescription">Appearance Description</label>
		<input type="text" name="AppearanceDescription" id="AppearanceDescription" placeholder="Character appearance" />
	</div>

	<div class="form-control">
		<label for="AlliesAndOrganizations">Allies And Organizations</label>
		<input type="text" name="AlliesAndOrganizations" id="AlliesAndOrganizations" placeholder="Character allies and organizations" />
	</div>

	<div class="form-control">
		<label for="AdditionalTraitsAndFeatures">Additional Traits And Features</label>
		<input type="text" name="AdditionalTraitsAndFeatures" id="AdditionalTraitsAndFeatures" placeholder=" character traits and features" />
	</div>
	
	
</form>